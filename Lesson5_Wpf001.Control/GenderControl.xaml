<UserControl x:Class="Lesson5_Wpf001.Control.GenderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lesson5_Wpf001.Control"
             mc:Ignorable="d" 
             d:DesignHeight="33" d:DesignWidth="164.667">
    <Grid>
        <RadioButton x:Name="maleRadioButton" Content="Мужчина" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" IsChecked="True" Checked="maleRadioButton_Checked"/>
        <RadioButton x:Name="femaleRadioButton" Content="Женщина" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Checked="femaleRadioButton_Checked"/>

    </Grid>
</UserControl>
